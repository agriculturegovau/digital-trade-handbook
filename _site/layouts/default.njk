<!doctype html>
<html>

<head>
  <title>{{ title }} - {{ siteTitle }}</title>
  <link href="{{ '/assets/css/main.css' | url }}" type="text/css" rel="stylesheet">
  <script src="{{ '/assets/js/dist.js' | url }}"></script>

  <meta name="viewport" content="width=device-width, initial-scale=1">
</head>

<body>
  <header>
    <h1>
      <a href="{{ '/' | url }}">
        <i class="icon"></i>
        <span>Taking Farmers to Markets</span>
        Service Delivery Handbook
      </a>
    </h1>
  </header>

  <div class="container">
    <nav class="global">
      <h1>Menu</h1>
      {{ collections.all | eleventyNavigation("/") | eleventyNavigationToHtml({
        listItemHasChildrenClass: "has-children",
        activeListItemClass: "selected",
        activeKey: eleventyNavigation.key
      }) | safe }}
    </nav>

    <main>
      {% include 'breadcrumbs.njk' %}

      <div class="content">
        <h1 class="title">
          {%- if on_page_title %}
            {{ on_page_title }}
          {%- else %}
            {{ title }}
          {%- endif %}
        </h1>

        {{ content | safe }}

        {% include 'children.njk' %}
      </div>

      <footer>
        <div class="edit-link">
          {% include 'edit_link.njk' %}
        </div>

        <div class="copyright">
          {% include 'copyright.njk' %}
        </div>
      </footer>
    </main>
  </div>
</body>

</html>
